{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "declaration": false,
        "declarationMap": false,
        "incremental": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "noEmit": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "resolveJsonModule": true,
        "strict": true,
        "target": "es5"
    },
    "display": "React.js",
    "exclude": ["node_modules"],
    "extends": "./base.json"
}
