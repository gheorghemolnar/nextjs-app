{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local", "**/.env"],
    "globalEnv": ["NODE_ENV", "VITE_PORT", "VITE_URL", "VITE_API_URL"],
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": [".next/**", "!.next/cache/**", "dist/**"]
        },
        "dev": {
            "cache": false,
            "dependsOn": ["^build"],
            "persistent": true
        },
        "lint": {},
        "test": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        },
        "type-check": {
            "cache": true,
            "dependsOn": ["^build"],
            "outputs": ["dist/**"]
        }
    }
}
