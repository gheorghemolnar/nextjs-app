{
    "devDependencies": {
        "@manypkg/cli": "0.21.0",
        "@turbo/gen": "^1.10.3",
        "commitizen": "4.3.0",
        "cz-conventional-changelog": "3.3.0",
        "dotenv-cli": "^7.2.1",
        "eslint": "^8.42.0",
        "eslint-config-custom": "workspace:*",
        "husky": "^8.0.0",
        "lint-staged": "13.2.2",
        "prettier": "^2.8.8",
        "shell-quote": "1.8.1",
        "tsconfig": "workspace:*",
        "turbo": "^1.10.3",
        "typescript": "5.1.3"
    },
    "name": "big",
    "packageManager": "pnpm@7.15.0",
    "private": true,
    "scripts": {
        "build": "turbo run build",
        "check:pkg-stability": "manypkg check",
        "check:pkg-versions": "manypkg exec ncu",
        "clean": "find . -name node_modules -o -name .turbo -o -name .next -o -name dist -type d -prune | xargs rm -rf",
        "cm": "cz",
        "dev": "dotenv -- turbo run dev",
        "git:clean": "git clean -d -x -e node_modules -e packages -f",
        "git:reset": "git reset --hard HEAD",
        "lint": "turbo run lint",
        "lint-staged": "lint-staged --concurrent false",
        "lint:fix": "turbo run lint -- --fix",
        "lint:workspace": "TIMING=1 eslint . --ext js,jsx,ts,tsx,json --config ./.eslintrc.js --no-eslintrc",
        "lint:workspace:fix": "TIMING=1 eslint . --ext js,jsx,ts,tsx,json --config ./.eslintrc.js --no-eslintrc --fix",
        "preinstall": "node -e \"if(process.env.CI == 'true') {console.log('Skipping preinstall...'); process.exit(1)}\" || npx -y only-allow pnpm",
        "prepare": "node -e \"if(process.env.CI == 'true') {console.log('Skipping prepare...'); process.exit(1)}\" || husky install",
        "prettier:check": "prettier --check .",
        "prettier:fix": "prettier --write .",
        "type-check": "turbo run type-check",
        "update:pkg-versions": "pnpm run check:pkg-versions -u && pnpm install"
    }
}
